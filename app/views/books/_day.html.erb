<th>
  <% if book.mon_by?(book.id) %>
    <div style="color: red">
      <%= book.start_i.month %>月<%= book.start_i.day %>日
    </div>
  <% else %>
    <%= book.start_i.month %>月<%= book.start_i.day %>日
  <% end %>
</th>
<th><%= (book.start_i+1).month %>月<%= (book.start_i+1).day %>日</th>
