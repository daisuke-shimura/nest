<h1>一覧ページ</h1>
<hr>
<h2>新規</h2>
<%= form_with model: Book.new, url:books_path, method: :post do |f| %>
  <%= f.date_field :start %>
  ～
  <%= f.date_field :finish %>
  <%= f.submit "送信" %>
<% end %>
<hr>
<h2>一覧</h2>
<% Book.all.each do |book| %>
  <%= book.id %>
  <%= link_to book_path(book.id) do %>
    <%= book.start %>
    ～
    <%= book.finish %>
  <% end %>
  　<%= link_to "削除", book_path(book.id), data: { turbo_method: :delete } %>
  <br>
<% end %>
